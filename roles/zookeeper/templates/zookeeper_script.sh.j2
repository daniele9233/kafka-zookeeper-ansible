cd /opt
wget https://archive.apache.org/dist/zookeeper/zookeeper-{{ zookeeper_version }}/apache-zookeeper-{{ zookeeper_version }}-bin.tar.gz
tar -xvzf apache-zookeeper-{{ zookeeper_version }}-bin.tar.gz
